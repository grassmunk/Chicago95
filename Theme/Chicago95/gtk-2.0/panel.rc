#############################################################
# Panelbar
#############################################################

style "panelbar"
{

	engine "pixmap"
	{
		image
		{
			function = HANDLE
			overlay_file = "toolbar/handlebox-h.png"
			overlay_stretch = FALSE
			orientation = HORIZONTAL
		}

		image
		{
			function = HANDLE
			overlay_file = "toolbar/handlebox-v.png"
			overlay_stretch = FALSE
			orientation = VERTICAL
		}
	}
}

widget_class "*PanelToplevel*"		style "panelbar"
