		image
		{
			function = BOX
			shadow = OUT
			recolorable = TRUE
			state = PRELIGHT
			file = "Others/null.png"
			border = { 0, 0, 0, 0 }
			stretch = TRUE
		}

		image
		{
			function = BOX
			recolorable = TRUE
			shadow = IN
			state = PRELIGHT
			file = "Others/null.png"
			border = { 0, 0, 0, 0 }
			stretch = TRUE
		}

		image
		{
			function = BOX
			recolorable = TRUE
			state = ACTIVE
			file = "Others/null.png"
			border = { 0, 0, 0, 0 }
			stretch = TRUE
		}

		image
		{
			function = BOX
			recolorable = TRUE
			state = INSENSITIVE
			file = "Others/null.png"
			border = { 0, 0, 0, 0 }
			stretch = TRUE
		}

		image
