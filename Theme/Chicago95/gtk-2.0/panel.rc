			function = BOX
			detail = "buttondefault"
			file = "Others/null.png"
			stretch = TRUE
		}

		image
		{
			function = BOX
			recolorable = TRUE
			state = NORMAL
			file = "Others/null.png"
			border = { 0, 0, 0, 0 }
			stretch = TRUE
